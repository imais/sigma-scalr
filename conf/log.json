{
    "version": 1,

    "formatters": {
        "simple": {
	        "format": "%(asctime)s %(levelname)s %(module)s:%(lineno)d\t%(message)s"
        }
    },

    "handlers": {
	    "console": {
		    "class": "logging.StreamHandler",
		    "formatter": "simple",
		    "stream": "ext://sys.stdout"
        }
    },
    
    "loggers": {
	    "__main__": {
		    "level": "INFO",
		    "handlers": ["console"],
		    "propagate": false
        },
	    "sim": {
		    "level": "DEBUG",
		    "handlers": ["console"],
		    "propagate": false
        }
    },
    
    "root": {
	    "level": "INFO",
	    "handlers": ["console"]
    }
}

